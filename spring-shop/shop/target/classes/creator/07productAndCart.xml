<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="pawel" id="1">
        <createTable tableName="PRODUCT_AND_CART">
            <column name="id_product_and_cart" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="price" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="id_product" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk1_id_product" references="PRODUCT(id_product)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>