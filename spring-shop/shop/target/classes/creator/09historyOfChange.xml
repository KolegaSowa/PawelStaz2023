<!--liquibase formatted xml-->
<!--changeset pawel:1-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="pawel" id="1">
        <createTable tableName="HISTORY_OF_CHANGE">
            <column name="id_history" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_product" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk2_id_product" references="PRODUCT(id_product)"/>
            </column>
            <column name="id_employee" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_id_employee" references="EMPLOYEE(id_employee)"/>
            </column>
            <column name="old_price" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="new_price" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_change" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>