<!--liquibase formatted xml-->
<!--changeset pawel:1-->
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="pawel" id="1">
        <createTable tableName="CLIENT">
            <column name="id_client" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="id_cart" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_id_cart" references="CART(id_cart)"/>
            </column>
            <column name="id_address" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_id_address" references="ADDRESS(id_address)"/>
            </column>
            <column name="id_client_data" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_id_client_data"
                             references="CLIENT_DATA(id_client_data)"/>
            </column>
            <column name="id_order" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>